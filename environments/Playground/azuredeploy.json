{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "contributorUserIds": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "Your user object ID."
            }
        }
    },
    "variables": {
        "roleDefinition_Contributor": "[resourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]"
    },
    "resources": [
        {
            "condition": "[greater(length(parameters('contributorUserIds')), 0)]",
            "name": "[parameters('contributorUserIds')[copyIndex()]]",
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2017-05-01",
            "copy": {
                "name": "roleAssignmentCopy",
                "count": "[length(parameters('contributorUserIds'))]"
            },
            "properties": {
                "roleDefinitionId": "[variables('roleDefinition_Contributor')]",
                "principalId": "[parameters('contributorUserIds')[copyIndex()]]",
                "scope": "[resourceGroup().id]"
            }
        }
    ],
    "outputs": {
    }
}