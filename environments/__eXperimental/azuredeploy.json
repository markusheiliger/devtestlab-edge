{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "secretsDeployment": "[concat(deployment().name, '-secrets')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('secretsDeployment')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "ClientId": {
                            "reference": {
                                "keyVault": {
                                    "id": "$(LabKeyVaultId)"
                                },
                                "secretName": "ClientId"
                            }
                        }
                    },
                    "resources": [],
                    "outputs": {
                        "ClientId": {
                            "type": "string",
                            "value": "[parameters('ClientId')]"
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
        "KeyVaultId": {
            "type": "string",
            "value": "$(LabKeyVaultId)"
        },
        "ClientId": {
            "type": "string",
            "value": "[reference(variables('secretsDeployment')).outputs.ClientId.value]"
        }
    }
}