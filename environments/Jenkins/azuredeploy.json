{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "servicePlanTier": "Basic",
        "servicePlanSku": "B1",
        "hostingSiteName": "[toLower(concat(resourceGroup().name, '-', uniqueString(resourceGroup().id))]",
        "hostingPlanName": "[toLower(concat(variables('hostingSiteName'), '-serviceplan'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "name": "[variables('hostingSiteName')]",
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('hostingPlanName')]"
            ],
            "properties": {
                "siteConfig": {
                    "linuxFxVersion": "DOCKER|jenkins/jenkins:lts"
                },
                "name": "[variables('hostingSiteName')]",
                "serverFarmId": "[variables('hostingPlanName')]",
                "hostingEnvironment": ""
            }
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[variables('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "workerSizeId": "1",
                "reserved": true,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Tier": "[variables('servicePlanTier')]",
                "Name": "[variables('servicePlanSku')]"
            },
            "kind": "linux"
        }
    ]
}